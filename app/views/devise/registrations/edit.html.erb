<h2 class="section-title no-margin-top titulo">Alterar Senha</h2>
<div class='hr-line-dashed'></div>
<%= simple_form_for(resource, as: resource_name, url: user_registration_path, html: { method: :patch }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :current_password, required: true %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :password, autocomplete: "off", required: false %>
      </div>
      <div class="col-md-6">
        <%= f.input :password_confirmation, required: false %>
      </div>
    </div>
  </div>

  <div class='hr-line-dashed'></div>
  <div class="form-actions">
    <%= f.button :submit, "Alterar Senha", class: "btn btn-primary" %>
  </div>
<% end %>

